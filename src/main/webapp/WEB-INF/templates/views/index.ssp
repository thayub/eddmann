<%@ val posts: List[com.eddmann.blog.models.PostModel] %>

<h3 class="tagline"><span>I make stuff for the web</span> and occasionally ramble about it here.</h3>

<%= unescape(posts.map(post => {
    <div class="post">
        <a href=""><h4>{ post.meta.getOrElse("title", "N/A") }</h4></a>
        <p>{ post.meta.getOrElse("snippet", "N/A") }</p>
        <div class="clr"></div>
    </div>
}).mkString) %>

<div class="clr"></div>